<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    tools:context=".FragmentProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:background="@drawable/circle_border"/>
    <TextView
        android:id="@+id/show_userphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_photo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/username_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/show_userphoto"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Nome"/>
    <TextView
        android:id="@+id/surname_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/username_prof"
        android:layout_below="@id/show_userphoto"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Cognome"/>
    <TextView
        android:id="@+id/nickname_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_prof"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="\@nick"/>
        <TextView
            android:id="@+id/switch_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nickname_prof"
            android:textColor="@color/colorAccent"
            android:text="Scegli come gli altri ti vedono nelle recensioni scritte da te:"/>
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="45dp"
        android:text="Nickname/Nome  "
        android:layout_below="@+id/nickname_prof"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/change_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_prof"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:text="Visualizza/Modifica recensioni"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:layout_centerHorizontal="true"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/change_reviews"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <TextView
            android:id="@+id/birthday_prof_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Data di Nascita"/>
            <TextView
                android:id="@+id/birthday_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthday_prof_ad"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="birthday"/>
        <TextView
            android:id="@+id/reviews_written_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/birthday_prof"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Numero Recensioni Scritte"/>
            <TextView
                android:id="@+id/reviews_written"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/reviews_written_ad"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="aggiorna la pagina per visualizzare i dati"/>
        <TextView
            android:id="@+id/avg_of_ratings_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/reviews_written"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Media Delle Valutazioni"/>
            <TextView
                android:id="@+id/avg_of_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/avg_of_ratings_ad"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="aggiorna la pagina per visualizzare i dati"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/user_info"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>
</RelativeLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>