<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_centerInParent="true"
    cardview:cardCornerRadius="20dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/acm_name_user_rev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:text="Nome struttura"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/image_acm"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/user_rev_rating_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/acm_name_user_rev"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="Valutazione media"/>
        <RatingBar
            android:id="@+id/ratingbar_user_rev"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/user_rev_rating_ad"
            android:layout_marginTop="15dp"
            android:isIndicator="true"
            android:numStars="5"/>
        <TextView
            android:id="@+id/user_rev_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingbar_user_rev"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="Recensione"/>
        <TextView
            android:id="@+id/user_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_rev_ad"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="Recensione"/>
        <TextView
            android:id="@+id/user_rev_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_rev"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_alignParentEnd="true"
            android:text="Data"/>
        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_rev_date"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_rounded"
            android:textColor="@android:color/white"
            android:text="Modifica"
            android:textSize="17sp"
            android:textAllCaps="false"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>