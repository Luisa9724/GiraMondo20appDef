<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_centerInParent="true"
    cardview:cardCornerRadius="20dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:id="@+id/image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="7dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/price_ind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fascia di prezzo"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/rating_ind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valutazione degli utenti"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEARN MORE"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="6dp"
            android:layout_below="@+id/rating_ind"
            android:layout_alignParentEnd="true"/>
        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_ind"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:isIndicator="true"
            android:numStars="5"/>
        <RatingBar
            android:id="@+id/ratingBarshadow"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_ind"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_marginStart="1dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_ind"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:textColor="#E07400"
            android:textSize="25sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>