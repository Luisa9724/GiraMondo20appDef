<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FragmentReviewForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/review_advise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="10dp"
            android:text="Tocca una stella per indicare un punteggio"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/review_advise"
            android:text="QualitÃ /prezzo"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <RatingBar
            android:id="@+id/ratingbar_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_advise"
            android:layout_marginTop="63dp"
            android:layout_alignParentEnd="true"
            android:numStars="5"
            android:stepSize="0.5"/>
        <TextView
            android:id="@+id/position_rev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/quality"
            android:text="Posizione"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <RatingBar
            android:id="@+id/ratingbar_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingbar_quality"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:numStars="5"
            android:stepSize="0.5"/>
        <TextView
            android:id="@+id/cleaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/position_rev"
            android:text="Pulizia"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <RatingBar
            android:id="@+id/ratingbar_cleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingbar_position"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:numStars="5"
            android:stepSize="0.5"/>
        <TextView
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/cleaning"
            android:text="Servizio"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <RatingBar
            android:id="@+id/ratingbar_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingbar_cleaning"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:numStars="5"/>
        <TextView
            android:id="@+id/type_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/service"
            android:text="Tipo Di Viaggio"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <RadioGroup
            android:id="@+id/radioGroup_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_travel"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radiofriends"
                    android:layout_marginStart="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Con Amici"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radiofamily"
                    android:layout_marginStart="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Famiglia"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radioculture"
                    android:layout_marginStart="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cultura"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radiorelax"
                    android:layout_marginStart="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relax"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/write_review_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup_reviews"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:text="Scrivi la tua recensione"/>

        <EditText
            android:id="@+id/write_review"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/write_review_ad"
            android:layout_marginTop="30dp"
            android:hint="(minimo 100 caratteri)"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferma"
            android:textAllCaps="true"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:layout_below="@id/write_review"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>